$TTL	604800
{{ fqdn }}.	IN	SOA	{{ fqdn }}. kaarut.{{ fqdn }}. (
			      2		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;

{% for vm in groups['dns_servers'] %}
{{ fqdn }}.	IN	NS	{{ vm }}.{{ fqdn }}.
{% endfor %}


{% for vm in groups['all'] %} 
{{ hostvars[vm]['inventory_hostname'] }}	IN	A	{{ hostvars[vm]['ansible_default_ipv4']['address'] }}
{% endfor %}