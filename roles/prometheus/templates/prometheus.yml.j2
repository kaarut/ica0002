global:
  scrape_interval:     15s # Set the scrape interval to every 15 seconds. Default is every 1 minute.
  evaluation_interval: 15s # Evaluate rules every 15 seconds. The default is every 1 minute.  # scrape_timeout is set to the global default (10s).

scrape_configs:
  # The job name is added as a label `job=<job_name>` to any timeseries scraped from this config.
  - job_name: 'prometheus'
    # Override the global default and scrape targets from this job every 5 seconds.
    scrape_interval: 5s
    scrape_timeout: 5s
    metrics_path: /prometheus/metrics #defaults to '/metrics'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: linux
    static_configs:
      - targets: 
        {% for vm in groups['all'] %} 
        - {{ hostvars[vm]['inventory_hostname'] }}:{{ prometheus_exporters['node']['port'] }}
        {% endfor %}

  - job_name: bind9
    static_configs:
      - targets: 
        {% for vm in groups['dns_servers'] %} 
        - {{ hostvars[vm]['inventory_hostname'] }}:{{ prometheus_exporters['bind9']['port'] }}
        {% endfor %}

  - job_name: nginx
    static_configs:
      - targets: 
        {% for vm in groups['all'] %} 
        - {{ hostvars[vm]['inventory_hostname'] }}:{{ prometheus_exporters['nginx']['port'] }}
        {% endfor %}

  - job_name: mysql
    static_configs:
      - targets: 
        {% for vm in groups['db_servers'] %} 
        - {{ hostvars[vm]['inventory_hostname'] }}:{{ prometheus_exporters['mysql']['port'] }}
        {% endfor %}